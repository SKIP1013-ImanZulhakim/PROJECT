		Scanner sc = new Scanner (System.in);
		System.out.print("Enter your age: ");
	    a = sc.nextInt();
		
		return a;
	}
	
	public static double getHeight (double a) {
		Scanner sc = new Scanner (System.in);
	    System.out.print("Enter your height in m : ");
